<?xml version="1.0" encoding="utf-8"?>
<!-- https://stackoverflow.com/questions/43085445/how-to-add-dividers-in-bottom-navigation-view -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDFFE7" />
        </shape>
    </item>

    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp"
        android:bottom="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#707070" />
        </shape>
    </item>
</layer-list>